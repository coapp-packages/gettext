@import "version.inc";
@import "outercurve.inc";
@import "common.inc";

#define { 
    flavor: "vc10";
    arch : "x86";
}

package {
    name: "libintl-dev[${flavor}]";
    version: "${package-version}";
    arch : "${arch}";
    
    display-name: "gettext localization dev library (libintl)";
    location: "http://coapp.org/repository/${OutputFilename}";

    feed: "http://coapp.org/repository/packages.atom.xml";
    publisher: "CoApp Project";
}

files[libs] {
    root: @"gettext\Release\";
    
    include: {
        "libintl.lib",
    };
    
    trim-path: all;
};

requires {
    package: "libintl-dev-common-${package-version}-any-${Package.PublicKeyToken}";
    package: "libintl[${flavor}]-${package-version}-${Package.Architecture}-${Package.PublicKeyToken}";
}

developer-library[libintl] {
    libraries : {
        libs
    };
}

metadata {
    summary: "gettext localization dev library (libintl)";
    description: @"${general-description} This package provides a library that programs can use to select and format the appropriate messages for the user's language.";
    
    licenses : {
        lgpl
    };
}

compatability-policy {
    minimum: "0.18.1.1";
    maximum: "${OneLessThanCurrent}"; // this is the default
    versions : {
    }; // if not specified, find the versions by looking at the feeds and finding all the major/minor versions in range.
}
